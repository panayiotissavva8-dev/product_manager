{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Product Manager",
            "type": "shell",
            "command": "clang++",
            "args": [
                "product_manager.cpp",
                "-o",
                "product_manager_app",
                "-lsqlite3",
                "-lpthread",
                "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/source_code"
            },
            "detail": "Compile and link C++ files with system SQLite"
        },
        {
            "label": "Run Product Manager",
            "type": "shell",
            "command": "./product_manager_app",
            "dependsOn": "Build and Run Product Manager",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/source_code"
            }
        }
    ]
}
